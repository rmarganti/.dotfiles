[alias]
    co = checkout

[core]
    excludesfile = ~/.gitignore.global
    ignorecase = false

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[init]
    defaultBranch = main

[url "git@github.com:"]
    insteadOf = https://github.com/

[pull]
	rebase = false

[user]
    # These values are set in ~/.gitconfig.local

[include]
    path = ~/.local.gitconfig
	path = /Users/rmarganti/.dotfiles/dots/.config/delta/themes.gitconfig
