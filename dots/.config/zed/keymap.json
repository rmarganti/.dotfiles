[
    // ---------------------------------------------------
    // No Context
    // ---------------------------------------------------

    {
        "bindings": {
            "ctrl-j": "menu::SelectNext",
            "ctrl-k": "menu::SelectPrevious",
            "cmd-escape": "workspace::ToggleZoom",
            "cmd-/": "terminal_panel::Toggle"
        }
    },

    // ---------------------------------------------------
    // Editor
    // ---------------------------------------------------

    {
        "context": "Editor && VimControl && !VimWaiting && !menu",
        "bindings": {
            // [ Buffers ]-------------------------------------

            // Buffer close All
            "space b a": "pane::CloseCleanItems",
            // Buffer Quit
            "space b q": "pane::CloseActiveItem",
            // Buffer Quit Right
            "space b Q l": "pane::CloseItemsToTheRight",
            // Buffer Quit Left
            "space b Q h": "pane::CloseItemsToTheLeft",
            // Buffer Only
            "space b o": "pane::CloseOtherItems",
            // Buffer New
            "space b n": "workspace::NewFile",
            // Buffer previous
            "space b h": "pane::ActivatePreviousItem",
            // Buffer next
            "space b l": "pane::ActivateNextItem",
            // Buffer swap left
            "space b H": "pane::SwapItemLeft",
            // Buffer swap right
            "space b L": "pane::SwapItemRight",

            // [ Code ]----------------------------------------

            // Code actions
            "space c a": "editor::ToggleCodeActions",
            // Code Diagnostics
            "space c d": "diagnostics::Deploy",
            // Code Format
            "space c f": "editor::Format",
            // Code Rename
            "space c r": "editor::Rename",
            // Code Restart language server
            "space c R": "editor::RestartLanguageServer",
            // Code Symbols
            "space c s": "outline::Toggle",
            // Code Workspace symbols
            "space c w": "project_symbols::Toggle",
            // Organize Imports
            "space c o": "editor::OrganizeImports",

            // Go to reFerences
            "g f": "editor::FindAllReferences",
            // Go Replace with register
            "g r": "vim::PushReplaceWithRegister",
            // Go to Implementation
            "g i": "editor::GoToImplementation",

            // [ Diagnostics ]---------------------------------

            // Diagnostic Next
            "space j d": "editor::GoToDiagnostic",
            // Diagnostic Prev
            "space k d": "editor::GoToPreviousDiagnostic",

            // [ Edits ]---------------------------------------

            // Edit CHANGELOG.md
            "space e c": [
                "task::Spawn",
                { "task_name": "Open Nearest CHANGELOG.md" }
            ],
            // Edit .env
            "space e e": ["task::Spawn", { "task_name": "Open Nearest .env" }],
            // Edit index.ts
            "space e i": [
                "task::Spawn",
                { "task_name": "Open Nearest index.ts" }
            ],
            // Edit package.json
            "space e p": [
                "task::Spawn",
                { "task_name": "Open Nearest package.json" }
            ],
            // Edit project.json
            "space e P": [
                "task::Spawn",
                { "task_name": "Open Nearest project.json" }
            ],
            // Edit README.md
            "space e r": [
                "task::Spawn",
                { "task_name": "Open Nearest README.md" }
            ],
            // Edit Other File
            "space e o": ["task::Spawn", { "task_name": "Edit Other File" }],

            // [ Files ]---------------------------------------

            // File Copy
            "space f c": "project_panel::Duplicate",
            // File Delete
            "space f d": "project_panel::Delete",
            // File Rename
            "space f r": "project_panel::Rename",
            // File Type
            "space f t": "language_selector::Toggle",
            // File eXplorer
            "space f x": ["task::Spawn", { "task_name": "LF File Explorer" }],
            "space f X": "pane::RevealInProjectPanel",

            // [ Misc ]----------------------------------------

            "g o": "vim::InsertEmptyLineBelow",
            "g O": "vim::InsertEmptyLineAbove",
            "alt-k": "editor::MoveLineUp",
            "alt-j": "editor::MoveLineDown",
            "g x": "vim::Exchange",
            "alt-n": "editor::GoToNextDocumentHighlight",
            "alt-p": "editor::GoToPreviousDocumentHighlight",

            // [ Tasks ]---------------------------------------

            "space t s": "task::Spawn",
            "space t r": "task::Rerun",
            "space t n": "editor::SpawnNearestTask",

            // [ Windows ]-------------------------------------

            // Window Split
            "space w s": "pane::SplitDown",
            // Window split Vertically
            "space w v": "pane::SplitRight",

            // [ Yanks ]---------------------------------------

            // Yank File name
            "space y f": "editor::CopyFileName",
            // Yank Absolute path
            "space y a": "workspace::CopyPath",
            // Yank Relative path
            "space y r": "workspace::CopyRelativePath",

            // [ Git ]-----------------------------------------

            // Git Add file
            "space g a": "git::Add",
            // Git Branch
            "space g b": "git::Branch",
            // Git Blame
            "space g B": "git::Blame",
            // Git Diff
            "space g d": "git::Diff",
            // GitHub Repo
            "space g h r": [
                "task::Spawn",
                { "task_name": "Github Browse Repo" }
            ],
            // GitHub File Main
            "space g h f m": [
                "task::Spawn",
                { "task_name": "Github Browse `main` File" }
            ],
            // GitHub File Commit
            "space g h f c": [
                "task::Spawn",
                { "task_name": "Github Browse Commit File" }
            ],
            // Git Modified files
            "space g m": "git::OpenModifiedFiles",
            // Git Status
            "space g s": "git_panel::ToggleFocus",
            // Git checkOut file
            "space g o": "git::RestoreFile",
            // Git Lazy
            "space g l": ["task::Spawn", { "task_name": "Lazy Git" }],
            // Git Next Hunk
            "space j x": "editor::GoToHunk",
            // Git Previous Hunk
            "space k x": "editor::GoToHunk",

            // [ Obsidian ]------------------------------------

            // Open Today's diary
            "space o t": ["task::Spawn", { "task_name": "Open Today's Diary" }],
            // Open Yesterday's diary
            "space o y": [
                "task::Spawn",
                { "task_name": "Open Yesterday's Diary" }
            ],

            // [ Search ]--------------------------------------

            // Search Files
            "space s f": "file_finder::Toggle",
            "space s F": ["task::Spawn", { "task_name": "TV File Finder" }],
            // Search Text
            "space s t": "pane::DeploySearch",
            "space s T": [
                "task::Spawn",
                { "task_name": "TV Full Text Search" }
            ],
            // Search Buffers"
            "space s b": "tab_switcher::Toggle"
        }
    },

    // ---------------------------------------------------
    // Git panel
    // ---------------------------------------------------

    {
        "context": "GitPanel && ChangesList",
        "bindings": {
            "escape": "workspace::ToggleLeftDock",
            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-j": "git_panel::FocusEditor"
        }
    },
    {
        "context": "GitPanel && CommitEditor > Editor",
        "bindings": {
            "escape": "workspace::ToggleLeftDock",
            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-k": "git_panel::FocusChanges"
        }
    },

    // ---------------------------------------------------
    // Agent Panel
    // ---------------------------------------------------,

    {
        "context": "AgentPanel",
        "bindings": {
            "cmd-?": "workspace::ToggleRightDock"
        }
    },

    {
        "context": "MessageEditor > Editor && VimControl",
        "bindings": {
            "escape": "workspace::ToggleRightDock",

            "space a c": "agent::ToggleContextPicker",
            "space a e": "agent::ExpandMessageEditor",
            "space a f": "agent::Follow",
            "space a h": "agent::OpenHistory",
            "space a m": "agent::ToggleModelSelector",
            "space a n": "agent::ToggleNewThreadMenu",
            "space a o": "agent::ToggleOptionsMenu",
            "space a p": "agent::ToggleProfileSelector",
            "space a r": "agent::OpenRulesLibrary",
            "space a s": "agent::OpenSettings"
        }
    },

    // ---------------------------------------------------
    // Debug Panel
    // ---------------------------------------------------

    {
        "context": "DebugPanel",
        "bindings": {
            "escape": "workspace::ToggleBottomDock"
        }
    },

    // ---------------------------------------------------
    // Project Panel
    // ---------------------------------------------------

    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "escape": "workspace::ToggleLeftDock"
        }
    },

    // ---------------------------------------------------
    // Terminal Panel
    // ---------------------------------------------------

    {
        "context": "Terminal",
        "bindings": {
            "cmd-t": "workspace::NewTerminal",
            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-k": "workspace::ActivatePaneUp",
            "ctrl-j": "workspace::ActivatePaneDown",
            "ctrl-space \\": "pane::SplitRight",
            "ctrl-space -": "pane::SplitHorizontal"
        }
    },

    // ---------------------------------------------------
    // All panels
    // ---------------------------------------------------

    {
        "context": "AgentPanel || Panel || ProjectPanel || CollabPanel || OutlinePanel || ChatPanel || VimControl || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView || DebugPanel",
        "bindings": {
            // [ Pane navigation ]-----------------------------

            "ctrl-h": "workspace::ActivatePaneLeft",
            "ctrl-l": "workspace::ActivatePaneRight",
            "ctrl-k": "workspace::ActivatePaneUp",
            "ctrl-j": "workspace::ActivatePaneDown"
        }
    },

    // ---------------------------------------------------
    // Empty pane
    // ---------------------------------------------------

    {
        "context": "EmptyPane || SharedScreen",
        "bindings": {
            // Buffer New
            "space b n": "workspace::NewFile",
            // File eXplorer
            "space f x": ["task::Spawn", { "task_name": "LF File Explorer" }],
            "space f X": "project_panel::ToggleFocus",
            // Git Diff
            "space g d": "git::Diff",
            // Git Branch
            "space g b": "git::Branch",
            // Git Lazy
            "space g l": ["task::Spawn", { "task_name": "Lazy Git" }],
            // Git Modified files
            "space g m": "git::OpenModifiedFiles",
            // Git Status
            "space g s": "git_panel::ToggleFocus",
            // Search Files
            "space s f": "file_finder::Toggle",
            "space s F": ["task::Spawn", { "task_name": "TV File Finder" }],
            // Search Text
            "space s t": "pane::DeploySearch",
            "space s T": [
                "task::Spawn",
                { "task_name": "TV Full Text Search" }
            ],
            // Open Today's diary
            "space o t": ["task::Spawn", { "task_name": "Open Today's Diary" }],
            // Open Yesterday's diary
            "space o y": [
                "task::Spawn",
                { "task_name": "Open Yesterday's Diary" }
            ],
            "space t s": "task::Spawn",
            "space t r": "task::Rerun"
        }
    },

    // ---------------------------------------------------
    // Code Actions
    // ---------------------------------------------------

    {
        "context": "Editor && showing_code_actions",
        "use_key_equivalents": true,
        "bindings": {
            "tab": "editor::ConfirmCodeAction"
        }
    }
]
