// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    // [ General ]-------------------------------------

    "show_whitespaces": "all",
    "tabs": { "show_diagnostics": "all" },
    "format_on_save": "on",

    // [ AI/Agent ]------------------------------------

    "agent": {
        "inline_assistant_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "default_profile": "write",
        "always_allow_tool_actions": true,
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "commit_message_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "default_width": 640
    },
    "context_servers": {
        "nx": {
            "source": "custom",
            "enabled": false,
            "command": "npx",
            "args": ["nx-mcp@latest", "."],
            "env": null
        },
        "effect-docs": {
            "source": "custom",
            "enabled": false,
            "command": "docker",
            "args": ["run", "--rm", "-i", "timsmart/effect-mcp"],
            "env": null
        }
    },
    "features": {
        "edit_prediction_provider": "zed"
    },

    // [ Git ]-----------------------------------------

    "git": {
        "inline_blame": {
            "enabled": false
        }
    },

    // [ Language Servers ]----------------------------

    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "check": {
                    "command": "clippy" // rust-analyzer.check.command (default: "check")
                }
            }
        }
    },

    // [ UI ]------------------------------------------

    "buffer_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 15,
    "relative_line_numbers": true,
    "tab_size": 4,
    "terminal": {
        "dock": "right",
        "default_width": 795 // Why does this have to be bigger than other panels?
    },
    "theme": "Neverforest",
    "ui_font_size": 16,
    "ui_font_family": "JetBrainsMono Nerd Font",
    "vim_mode": true,

    // [ Panel Sizes ]---------------------------------

    "collaboration_panel": { "default_width": 480 },
    "git_panel": { "default_width": 480 },
    "outline_panel": { "default_width": 480 },
    "project_panel": { "default_width": 480 },

    // [ Search ]--------------------------------------

    "search": {
        "case_sensitive": true,
        "regex": true
    }
}
