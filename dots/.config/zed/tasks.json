[
    {
        "label": "TV File Finder",
        "command": "tv files | tr '\\n' '\\0' | xargs -0 zed",
        "hide": "on_success",
        "allow_concurrent_runs": true,
        "use_new_terminal": true,
        "reveal_target": "center",
        "shell": { "program": "sh" }
    },

    {
        "label": "TV Full Text Search",
        "command": "tv text | tr '\\n' '\\0' | xargs -0 zed",
        "hide": "always",
        "allow_concurrent_runs": true,
        "use_new_terminal": true,
        "reveal_target": "center",
        "shell": { "program": "sh" }
    },

