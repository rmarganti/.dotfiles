    {
        "label": "Github Browse File",
        "command": "gh",
        "args": [
            "browse",
            "$ZED_RELATIVE_FILE",
            "--commit=$(git rev-parse HEAD)"
        ],
        "use_new_terminal": false,
        "allow_concurrent_runs": false,
        "reveal": "never",
        "reveal_target": "dock",
        "hide": "always",
