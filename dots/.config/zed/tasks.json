// Static tasks configuration.
[
    {
        "label": "TV File Finder",
        "command": "zed \"$(tv files-hidden)\"",
        "hide": "always",
        "allow_concurrent_runs": true,
        "use_new_terminal": true,
        "reveal_target": "center"
    },

    {
        "label": "TV Full Text Search",
        "command": "zed \"$(tv text)\"",
        "hide": "always",
        "allow_concurrent_runs": true,
        "use_new_terminal": true,
        "reveal_target": "center"
    },

    {
        "label": "LF File Explorer",
        "command": "~/.config/zed/scripts/zed_lf.sh",
        "hide": "always",
        "allow_concurrent_runs": true,
        "use_new_terminal": true,
        "reveal_target": "center"
    },

    {
        "label": "Open Today's Diary",
        "command": "~/.config/zed/scripts/open_diary.sh today",
        "hide": "always",
        "allow_concurrent_runs": false,
        "use_new_terminal": false,
        "reveal_target": "center"
    },

    {
        "label": "Open Yesterday's Diary",
        "command": "~/.config/zed/scripts/open_diary.sh yesterday",
        "hide": "always",
        "allow_concurrent_runs": false,
        "use_new_terminal": false,
